{% extends "node.html.twig" %}

{% block header %}
  <div class='page-hero'>
    {{ content.field_media_image }}
    <div class='page-hero__text'>
      <h1{{ title_attributes.setAttribute('id', 'page-title') }}>{{ label }}</h1>
      {{ content.field_summary }}
    </div>
  </div>
{% endblock %}


{% block content %}
  {{ content|without('field_summary', 'field_media_image') }}
{% endblock %}
